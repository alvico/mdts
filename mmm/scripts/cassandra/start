#! /bin/sh


. ../mmmrc

if test -x /etc/init.d/cassandra; then
    /etc/init.d/cassandra stop >/dev/null 2>&1 || true
fi

if test -d /var/log/cassandra; then
    find /var/log/cassandra -type f -exec rm -f '{}' ';' || true
fi

if test x"$CASSANDRA_STANDALONE" = xyes; then
    sh start.1
else
    sh start.1
    sh start.2
    sh start.3
fi

# Checking Cassandra status
sleep 5
echo Cassandra 1
sudo ip netns exec ns005 nodetool ring -h 10.0.0.5
echo Cassandra 2
sudo ip netns exec ns006 nodetool ring -h 10.0.0.6
echo Cassandra 3
sudo ip netns exec ns007 nodetool ring -h 10.0.0.7

